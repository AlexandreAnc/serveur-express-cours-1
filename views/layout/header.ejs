<header class="site-header">
    <div class="container">
        <h1 class="logo"><a href="/"><%= website_title %></a></h1>

        <button class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <nav class="navbar" id="navbar">
            <a href="/" class="nav-link">Accueil</a>
            <a href="/courses" class="nav-link">Mes cours</a>
            <a href="/contact" class="nav-link">Contact</a>
            <a href="/chat" class="nav-link">Chat</a>
            <a href="/logs" class="nav-link">Logs</a>
            <a href="/dsaodsjdoujdasojdsio" class="nav-link">404</a>
            <a href="/download" class="nav-link">Télécharger</a>
            
            <% if (isAuthenticated && user) { %>
                <span class="user-welcome">Bienvenue <%= user.login %></span>
                <a href="/logout" class="nav-link nav-link-logout">Déconnexion</a>
            <% } else { %>
                <a href="/login" class="nav-link">Connexion</a>
            <% } %>
        </nav>
    </div>
</header>

<script>
    // Toggle menu mobile
    document.addEventListener('DOMContentLoaded', function() {
        const toggle = document.getElementById('mobile-menu-toggle');
        const navbar = document.getElementById('navbar');
        
        if (toggle && navbar) {
            toggle.addEventListener('click', function() {
                navbar.classList.toggle('active');
                toggle.classList.toggle('active');
            });
            
            // Fermer le menu quand on clique sur un lien
            const navLinks = navbar.querySelectorAll('.nav-link');
            navLinks.forEach(function(link) {
                link.addEventListener('click', function() {
                    navbar.classList.remove('active');
                    toggle.classList.remove('active');
                });
            });
        }
    });
</script>
