<style>
    .hero-section {
        background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        color: white;
        padding: 80px 20px;
        text-align: center;
        margin-bottom: 60px;
        border-radius: 0 0 24px 24px;
    }

    .hero-section h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .hero-section p {
        font-size: 1.25rem;
        opacity: 0.95;
        max-width: 600px;
        margin: 0 auto 30px;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 60px 20px;
        }

        .hero-section h1 {
            font-size: 2rem;
        }

        .hero-section p {
